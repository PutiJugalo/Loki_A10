<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"


    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbarLaporKPSelesai"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="LAPOR KP SELESAI">

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="110dp"
        android:layout_height="107dp"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.053"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appbarLaporKPSelesai"
        app:srcCompat="@drawable/ic_icon_profile"
        app:tint="@color/black" />

    <TextView
        android:id="@+id/textNamaLaporKPSelesai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/roboto_bold"
        android:text="Shefilla Raisya"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/imageView12"
        app:layout_constraintTop_toTopOf="@+id/imageView12" />

    <TextView
        android:id="@+id/textNIMLaporKPSelesai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/roboto"
        android:text="2011523013"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/textNamaLaporKPSelesai"
        app:layout_constraintTop_toBottomOf="@+id/textNamaLaporKPSelesai" />

    <TextView
        android:id="@+id/textTempatKPLaporKPSelesai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/roboto_bold"
        android:text="Tempat Pelaksanaan"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/imageView12"
        app:layout_constraintTop_toBottomOf="@+id/imageView12" />

    <TextView
        android:id="@+id/textNamaTempatLaporKPSelesai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/roboto_medium"
        android:text="Semen Padang"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@+id/textTempatKPLaporKPSelesai"
        app:layout_constraintTop_toBottomOf="@+id/textTempatKPLaporKPSelesai" />

    <TextView
        android:id="@+id/textWaktuKPLaporKPSelesai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/roboto_bold"
        android:text="Waktu Pelaksanaan"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/textNamaTempatLaporKPSelesai"
        app:layout_constraintTop_toBottomOf="@+id/textNamaTempatLaporKPSelesai" />

    <TextView
        android:id="@+id/textTanggalKPLaporKPSelesai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/roboto_medium"
        android:text="01/03/2022"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@+id/textWaktuKPLaporKPSelesai"
        app:layout_constraintTop_toBottomOf="@+id/textWaktuKPLaporKPSelesai" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/style_recycle_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textTanggalKPLaporKPSelesai">

        <TextView
            android:id="@+id/textYakinLaporKPSelesai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/roboto_medium"
            android:text="Apakah Anda Yakin Lapor KP Selesai?"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/buttonIyaLaporKPSelesai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Iya"
            android:onClick="ke_home"
            android:background="@drawable/style_button_iya"
            app:layout_constraintEnd_toEndOf="@+id/textYakinLaporKPSelesai"
            app:layout_constraintStart_toStartOf="@+id/textYakinLaporKPSelesai"
            app:layout_constraintTop_toBottomOf="@+id/textYakinLaporKPSelesai" />

        <Button
            android:id="@+id/buttonBatalLaporKPSelesai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Tidak"
            android:onClick="ke_detailKP"
            android:background="@drawable/style_button_tidak"
            app:layout_constraintEnd_toEndOf="@+id/buttonIyaLaporKPSelesai"
            app:layout_constraintStart_toStartOf="@+id/buttonIyaLaporKPSelesai"
            app:layout_constraintTop_toBottomOf="@+id/buttonIyaLaporKPSelesai" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>